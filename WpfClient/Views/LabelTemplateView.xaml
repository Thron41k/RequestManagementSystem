<UserControl x:Class="RequestManagement.WpfClient.Views.LabelTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RequestManagement.WpfClient.Models"
             xmlns:local="clr-namespace:RequestManagement.WpfClient.Views"
             xmlns:controls="clr-namespace:RequestManagement.WpfClient.Controls"
             x:Name="Root"
             Width="600" Height="340">

    <Border BorderThickness="2"
            BorderBrush="Black"
            Background="White"
            Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="106"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="145"/>
            </Grid.RowDefinitions>

            <!-- Наименование -->
            <Viewbox Stretch="Uniform">
                    <!-- Фикс ширины -->
                <controls:AutoSizedTextBlock TextValue="{Binding Incoming.Stock.Nomenclature.Name}"
                                             FontWeight="Bold"
                                             MinFontSize="20"
                                             MaxFontSize="100"
                                             Width="589"
                                             Height="106"
                                             Margin="0,-15,0,0"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                />
            </Viewbox>

            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Grid.Row="0" Margin="0,0,0,0"/>

            <!-- Артикул -->
            <Viewbox Grid.Row="1" Stretch="Uniform">
                <controls:AutoSizedTextBlock TextValue="{Binding Incoming.Stock.Nomenclature.Article}"
                                             FontFamily="Times New Roman"
                                             MinFontSize="20"
                                             MaxFontSize="100"
                                             Width="589"
                                             Height="70"
                                             Margin="0,0,0,0"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
            </Viewbox>

            <Border BorderBrush="Black" BorderThickness="0,0,0,2" Grid.Row="1" Margin="0,0,0,0"/>

            <!-- Описание + QR + дата -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="148"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="105"/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>

                <Viewbox Grid.Column="0" Grid.Row="0" Stretch="Uniform">
                    <controls:AutoSizedTextBlock TextValue="{Binding Incoming.Application.Equipment.FullNameFromShortName}"
                                                 FontStyle="Italic"
                                                 MinFontSize="20"
                                                 MaxFontSize="100"
                                                 Width="438"
                                                 Height="105"
                                                 Margin="0,0,0,0"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                </Viewbox>

                <Image Grid.Column="1" Grid.RowSpan="2"
                       Width="140" Height="140"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Right"
                       Margin="0,0,5,4"
                       Stretch="Fill"
                       Source="{Binding QrCodeImage}" />

                <Viewbox Grid.Column="0" Grid.Row="1" Stretch="Uniform">
                    <controls:AutoSizedTextBlock TextValue="{Binding Incoming.Date, StringFormat='Дата поступления: {0:dd.MM.yyyy}'}"
                                                 FontStyle="Italic"
                                                 FontFamily="Times New Roman"
                                                 MinFontSize="20"
                                                 MaxFontSize="100"
                                                 Width="438"
                                                 Height="45"
                                                 Margin="0,0,0,0"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                </Viewbox>

                <Border BorderBrush="Black" BorderThickness="0,0,0,2" Grid.Column="0" Grid.Row="0"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
