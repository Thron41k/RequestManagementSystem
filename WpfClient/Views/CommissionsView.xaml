<UserControl x:Class="WpfClient.Views.CommissionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:WpfClient.ViewModels.Behaviors"
             xmlns:helpers="clr-namespace:WpfClient.ViewModels.Helpers"
             xmlns:vm="clr-namespace:WpfClient.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="830">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/TextBoxClearButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:CommissionsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="400" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"  Orientation="Horizontal" Margin="5">
                <Button Content="Добавить" Command="{Binding AddCommissionsCommand}" />
            </StackPanel>
            <DataGrid Grid.Row="1" ItemsSource="{Binding CommissionsViewSource.View}" SelectedItem="{Binding SelectedCommissions}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10,10,0,0" SelectionMode="Single" SelectionUnit="FullRow">
                <DataGrid.InputBindings>
                    <MouseBinding
                        MouseAction="LeftDoubleClick"
                        Command="{Binding DoubleClickCommand}"
                        CommandParameter="{Binding CommissionsList/}"/>
                    <MouseBinding
                        MouseAction="LeftClick"
                        Command="{Binding ClickCommand}"
                        CommandParameter="{Binding CommissionsList/}"/>
                </DataGrid.InputBindings>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Филиал" Binding="{Binding Name}" IsReadOnly="True" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"  Orientation="Horizontal" Margin="5,30,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Филиал" Tag="{Binding ClearNameTextCommand}" Text="{Binding CommissionsName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="1"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Утверждаю(Акты)" Tag="{Binding ClearSelectedApproveForActCommand}" Text="{Binding SelectedApproveForAct.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectApproveForActCommand}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="2"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Утверждаю(Дефектные и лимитные ведомости)" Tag="{Binding ClearSelectedApproveForDefectAndLimitCommand}" Text="{Binding SelectedApproveForDefectAndLimit.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectApproveForDefectAndLimitCommand}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="3"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Председатель комиссии" Tag="{Binding ClearSelectedChairmanCommand}" Text="{Binding SelectedChairman.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectChairmanCommand}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="4"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Член комиссии 1" Tag="{Binding ClearSelectedMember1Command}" Text="{Binding SelectedMember1.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectMember1Command}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="5"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Член комиссии 2" Tag="{Binding ClearSelectedMember2Command}" Text="{Binding SelectedMember2.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectMember2Command}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="6"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Член комиссии 3" Tag="{Binding ClearSelectedMember3Command}" Text="{Binding SelectedMember3.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectMember3Command}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="7"  Orientation="Horizontal" Margin="5,10,5,5">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Член комиссии 4" Tag="{Binding ClearSelectedMember4Command}" Text="{Binding SelectedMember4.FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="400" Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                        <behaviors:MouseClickCommandBehavior Command="{Binding SelectMember4Command}" />
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <StackPanel Grid.Row="8"  Orientation="Horizontal" Margin="5,17,5,5" HorizontalAlignment="Center">
                <Button Content="Сохранить" Command="{Binding SaveCommissionsCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
