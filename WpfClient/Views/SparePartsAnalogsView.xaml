<UserControl x:Class="WpfClient.Views.SparePartsAnalogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:WpfClient.ViewModels.Behaviors"
             xmlns:helpers="clr-namespace:WpfClient.ViewModels.Helpers"
             xmlns:vm="clr-namespace:WpfClient.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/TextBoxClearButton.xaml" />
                <ResourceDictionary Source="Styles/StyledButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:SparePartsAnalogsViewModel />
    </UserControl.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBox helpers:PlaceholderHelper.PlaceholderText="Номенклатура" Tag="{Binding ClearFilterTextCommand}" Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource ClearableTextBoxStyle}">
                    <b:Interaction.Behaviors>
                        <behaviors:ClearButtonBehavior />
                        <behaviors:PlaceholderBehavior PlaceholderTargetName="Placeholder"/>
                    </b:Interaction.Behaviors>
                </TextBox>
            </StackPanel>
            <DataGrid Grid.Row="1" ItemsSource="{Binding NomenclatureViewSource.View}" SelectedItem="{Binding SelectedNomenclature}"
                      AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10,0,0" SelectionMode="Single" SelectionUnit="FullRow">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#0078d7"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFE5E5E5"/>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код" Binding="{Binding Code}" IsReadOnly="True" Width="*" />
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" IsReadOnly="True" Width="*" />
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" IsReadOnly="True" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Column="1" Margin="5,2,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Button Content="Добавить аналог" Command="{Binding AddNomenclatureAnalogCommand}" Style="{StaticResource StyledButton}"/>
            </StackPanel>
            <DataGrid Grid.Row="1" ItemsSource="{Binding NomenclatureAnalogViewSource.View}" SelectedItem="{Binding SelectedNomenclatureAnalog}"
                      AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10,0,0" SelectionMode="Single" SelectionUnit="FullRow">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#0078d7"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFE5E5E5"/>
                </DataGrid.Resources>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Удалить" Command="{Binding DeleteNomenclatureAnalogCommand}"/>
                        <MenuItem Header="Добавить" Command="{Binding AddNomenclatureAnalogCommand}"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Код" Binding="{Binding Code}" IsReadOnly="True" Width="*" />
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" IsReadOnly="True" Width="*" />
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" IsReadOnly="True" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
